<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SGGWMeet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorPrimaryVariant">@color/primary_accent_alt</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_accent</item>
        <item name="colorSecondaryVariant">@color/secondary_accent_alt</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorPrimary">"@color/blackAlpha"</item>
    </style>
    <style name="DatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/secondary_accent</item>
        <item name="android:colorAccent">@color/secondary_accent</item>
        <item name="colorControlActivated">@color/secondary_accent_alt</item>
        <item name="colorControlHighlight">@color/default_text_view_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>