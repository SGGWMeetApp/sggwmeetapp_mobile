<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbarButton">
        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="transparentButton">
        <item name="android:background">#00000000</item>
    </style>

    <style name="welcome_sheet_text">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_accent</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/montserratromanmedium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingVertical">2dp</item>
    </style>
    <style name="sheet_buttons_small">
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:insetLeft">50dp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetRight">50dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_accent</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingVertical">2dp</item>
    </style>
    <style name="profile_main_text">
        <item name="android:gravity">left</item>
        <item name="android:textSize">24sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_accent</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/montserratromanmedium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="group_selection_buttons">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary_accent</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
</resources>