<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="pl.sggw.sggwmeet.fragment.welcome.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToSaveState="true"/>
        <action
            android:id="@+id/action_startFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToSaveState="true"/>
        <action
            android:id="@+id/action_startFragment_to_scrollingFragment"
            app:destination="@id/scrollingFragment"
            app:popUpTo="@id/scrollingFragment"
            app:popUpToSaveState="true"/>
    </fragment>
    <fragment
        android:id="@+id/scrollingFragment"
        android:name="pl.sggw.sggwmeet.fragment.welcome.ScrollingFragment"
        android:label="fragment_scrolling"
        tools:layout="@layout/fragment_scrolling" >
        <action
            android:id="@+id/action_scrollingFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToSaveState="true"/>
        <action
            android:id="@+id/action_scrollingFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToSaveState="true"/>
        <action
            android:id="@+id/action_scrollingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToSaveState="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="pl.sggw.sggwmeet.fragment.welcome.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToSaveState="true"/>
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToSaveState="true"/>
        <action
            android:id="@+id/action_loginFragment_to_scrollingFragment"
            app:destination="@id/scrollingFragment"
            app:popUpTo="@id/scrollingFragment"
            app:popUpToSaveState="true"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="pl.sggw.sggwmeet.fragment.welcome.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToSaveState="true"/>
        <action
            android:id="@+id/action_registerFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToSaveState="true"/>
        <action
            android:id="@+id/action_registerFragment_to_scrollingFragment"
            app:destination="@id/scrollingFragment"
            app:popUpTo="@id/scrollingFragment"
            app:popUpToSaveState="true"/>
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="pl.sggw.sggwmeet.fragment.welcome.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <action
            android:id="@+id/action_resetPasswordFragment_to_scrollingFragment"
            app:destination="@id/scrollingFragment" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>