<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:animateLayoutChanges="true"
    tools:context=".fragment.core.MapFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/arrow_BT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="10dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/asset_arrow_right"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/zoom_in_BT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="10dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/asset_plus"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/zoom_out_BT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="10dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/asset_minus"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/zoom_in_BT"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.core.MapFragment" />


    <ProgressBar
        android:id="@+id/map_PB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/places_list_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/map"
        app:layout_constraintEnd_toEndOf="@id/map"
        app:layout_constraintTop_toTopOf="@id/map"
        app:layout_constraintBottom_toBottomOf="@id/map"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/places_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/places_list_category_spinner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/places_list_back_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/upper_guideline"
                android:layout_margin="@dimen/margin_small"/>

            <ImageButton
                android:id="@+id/places_list_back_button"
                android:layout_width="40dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/places_list_category_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/upper_guideline"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/asset_arrow_left"
                android:scaleType="fitXY"
                android:background="@drawable/bg_white_rounded"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/upper_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="60dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/distance_filter_closed_cv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upper_guideline"
                app:layout_constraintBottom_toTopOf="@id/lower_guideline"
                android:visibility="visible"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/distance_filter_closed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/distance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toStartOf="@id/open_distance_filter_button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/distance_text"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserratromanregular"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/margin_small"/>

                    <ImageButton
                        android:id="@+id/open_distance_filter_button"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="@dimen/margin_small"
                        android:src="@drawable/asset_arrow_right"
                        android:rotation="90"
                        android:scaleType="fitXY"
                        android:background="@drawable/bg_white_rounded"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/distance_filter_open_cv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upper_guideline"
                app:layout_constraintBottom_toTopOf="@id/lower_guideline"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/distance_filter_open_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/distance_input"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:inputType="number"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/distance_unit_spinner"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:autofillHints="@string/distance_input_hint_text"
                        android:hint="@string/distance_input_hint_text"
                        android:layout_margin="@dimen/margin_small"
                        android:fontFamily="@font/montserratromanregular"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <Spinner
                        android:id="@+id/distance_unit_spinner"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/margin_small"
                        app:layout_constraintStart_toEndOf="@id/distance_input"
                        app:layout_constraintEnd_toStartOf="@id/distance_close_card_button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageButton
                        android:id="@+id/distance_close_card_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/margin_small"
                        app:layout_constraintStart_toEndOf="@id/distance_unit_spinner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/asset_arrow_left"
                        android:rotation="90"
                        android:scaleType="fitXY"
                        android:background="@drawable/bg_white_rounded"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/lower_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="120dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/places_list_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lower_guideline"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/margin_small"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/place_description_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginBottom="15dp"
        android:elevation="25dp"
        android:visibility="gone"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/place_description_wrapper_CL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/base_cardview"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/place_description_image_CV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginVertical="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0"
                                app:cardCornerRadius="3dp">

                                <ImageView
                                    android:id="@+id/place_description_IV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:maxWidth="100dp"
                                    android:maxHeight="75dp"
                                    tools:src="@drawable/asset_icon_logo" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginVertical="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="2dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/place_description_name_TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/montserrat"
                                    android:textFontWeight="700"
                                    android:textSize="16sp"
                                    tools:text="Klub SGGW Lorem Ipsum" />

                                <TextView
                                    android:id="@+id/place_description_address_TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginVertical="3dp"
                                    android:fontFamily="@font/montserrat"
                                    android:textFontWeight="500"
                                    tools:text="ul. Nowowiejska 1" />

                                <TextView
                                    android:id="@+id/place_description_rating_TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/montserrat"
                                    android:textFontWeight="400"
                                    tools:text="Ocena: 20%" />
                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/place_description_close_BT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:paddingVertical="5dp"
                            android:src="@drawable/asset_close" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/place_description_view_BT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/asset_info" />
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>