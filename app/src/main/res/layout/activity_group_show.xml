<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/navbar_activity"
                layout="@layout/navbar_close" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="15dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/group" />

                        <TextView
                            android:id="@+id/group_info_name_TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/roboto"
                            android:text="Group Name"
                            android:textColor="@color/blackAlpha"
                            android:textFontWeight="400"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin" />

                        <TextView
                            android:id="@+id/group_info_admin_TV"
                            style="@style/profile_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/editGroup_BT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_marginTop="8dp"
                            android:text="@string/event_edit"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <Button
                            android:id="@+id/leave_group_BT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:backgroundTint="#FF4444"
                            android:text="@string/group_delete"
                            android:visibility="gone"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_show_selection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="3dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="15dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/group_user_section_BT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="5dp">

                            <TextView
                                android:id="@+id/group_user_section_TV"
                                style="@style/group_selection_buttons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CzÅ‚onkowie" />

                            <View
                                android:id="@+id/group_user_section_BAR"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@drawable/bg_aqua_rounded" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/group_event_section_BT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:orientation="vertical"
                            android:paddingVertical="5dp">

                            <TextView
                                android:id="@+id/group_event_section_TV"
                                style="@style/group_selection_buttons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wydarzenia" />

                            <View
                                android:id="@+id/group_event_section_BAR"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@drawable/bg_aqua_rounded"
                                android:visibility="invisible"
                                tools:visibility="visible" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_show_user_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <Button
                            android:id="@+id/group_add_user_BT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_marginHorizontal="15dp"
                            android:text="@string/add_user"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/group_show_user_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="7dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_show_event_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <Button
                            android:id="@+id/group_add_event_BT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_marginHorizontal="15dp"
                            android:text="Dodaj wydarzenie"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/group_show_event_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="7dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/exit_BT"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="15dp"
                        android:backgroundTint="#FF4444"
                        android:padding="15dp"
                        android:paddingBottom="15dp"
                        android:text="@string/exit"
                        android:visibility="visible" />


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <FrameLayout
                android:id="@+id/loading_FL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40000000"
                android:visibility="invisible">

            </FrameLayout>

            <ProgressBar
                android:id="@+id/loading_PB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3" />

        </FrameLayout>


    </LinearLayout>

</layout>