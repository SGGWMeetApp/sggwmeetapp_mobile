<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/opinion_TV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/location_TV"
        android:fontFamily="@font/montserratromanmedium"/>

    <TextView
        android:id="@+id/opinion_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/name_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/type_TV"
        android:fontFamily="@font/montserratromanregular"/>

    <TextView
        android:id="@+id/location_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/type_TV"
        app:layout_constraintTop_toBottomOf="@id/name_TV"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/montserratromanregular"/>

    <TextView
        android:id="@+id/type_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/location_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opinion_TV"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/montserratromanregular"/>

</androidx.constraintlayout.widget.ConstraintLayout>