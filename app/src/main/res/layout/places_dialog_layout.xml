<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrow_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/places_list"
        android:text="@string/filter_button_text"
        android:layout_margin="@dimen/margin_small"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/arrow_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/asset_arrow_left"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="10dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/button_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/places_list"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/places_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_small"/>

</androidx.constraintlayout.widget.ConstraintLayout>