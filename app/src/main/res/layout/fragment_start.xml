<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="pl.sggw.sggwmeet.fragment.welcome.StartFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>

        <TextView
            android:id="@+id/label_greetings"
            android:layout_width="@dimen/fill"
            android:layout_height="@dimen/fill"
            android:text="@string/fstart_label_greetings_text"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_top_top"
            app:layout_constraintBottom_toTopOf="@id/guideline_top_bottom"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>

        <Button
            android:id="@+id/login_BT"
            android:layout_width="@dimen/fill"
            android:layout_height="@dimen/fill"
            android:text="@string/fstart_button_next_text"
            android:gravity="center"
            android:layout_marginVertical="@dimen/margin_small"
            android:layout_marginHorizontal="@dimen/margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_bottom_top"
            app:layout_constraintBottom_toTopOf="@id/skip_login_BT"/>

        <Button
            android:id="@+id/skip_login_BT"
            android:layout_width="@dimen/fill"
            android:layout_height="@dimen/fill"
            android:text="@string/skip_login_button_text"
            android:gravity="center"
            android:layout_marginVertical="@dimen/margin_small"
            android:layout_marginHorizontal="@dimen/margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_BT"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom_bottom"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>